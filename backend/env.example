# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pentrypal_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pentrypal_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=PentryPal API
PROJECT_VERSION=1.0.0
DEBUG=True

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081", "exp://192.168.1.100:8081"]

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads/

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
