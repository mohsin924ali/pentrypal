{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/components/*": [
        "presentation/components/*"
      ],
      "@/screens/*": [
        "presentation/screens/*"
      ],
      "@/navigation/*": [
        "presentation/navigation/*"
      ],
      "@/hooks/*": [
        "presentation/hooks/*"
      ],
      "@/providers/*": [
        "presentation/providers/*"
      ],
      "@/store/*": [
        "application/store/*"
      ],
      "@/services/*": [
        "application/services/*"
      ],
      "@/utils/*": [
        "application/utils/*"
      ],
      "@/domain/*": [
        "domain/*"
      ],
      "@/infrastructure/*": [
        "infrastructure/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/types": [
        "shared/types"
      ],
      "@/constants": [
        "shared/constants"
      ],
      "@/theme": [
        "shared/theme"
      ],
      "@/validation": [
        "shared/validation"
      ],
      "@/i18n": [
        "shared/i18n"
      ],
      "@/test/*": [
        "../test/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "App.tsx",
    "App.*.tsx",
    "index.js",
    "global.d.ts",
    "metro.config.js",
    "babel.config.js",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "build",
    ".expo",
    "web-build"
  ],
  "extends": "expo/tsconfig.base"
}