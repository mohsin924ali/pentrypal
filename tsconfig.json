{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/components/*": [
        "presentation/components/*"
      ],
      "@/screens/*": [
        "presentation/screens/*"
      ],
      "@/hooks/*": [
        "presentation/hooks/*"
      ],
      "@/store/*": [
        "application/store/*"
      ],
      "@/services/*": [
        "application/services/*"
      ],
      "@/utils/*": [
        "application/utils/*"
      ],
      "@/domain/*": [
        "domain/*"
      ],
      "@/infrastructure/*": [
        "infrastructure/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "App.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "coverage"
  ],
  "extends": "expo/tsconfig.base"
}
